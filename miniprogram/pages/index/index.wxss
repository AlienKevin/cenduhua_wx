/* index.wxss */

/* Font sizes */
page { 
  --font-body: 14px;
  --font-title: 20px;
}

.container {
  padding: var(--font-body);
}

.search-bar {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

input {
  flex: 3;
  height: calc(var(--font-body) * 3);
  padding: 0 var(--font-body);
  border: 1px solid #ccc;
}

#search-button {
  flex: 1;
  height: calc(var(--font-body) * 3);
}

.result-list {
  margin-top: var(--font-body);
}

.result-item {
  margin-right: auto;
  margin-bottom: 30px;
  display: flex;
  flex-direction: column;
}

.word {
  font-weight: bold;
}

.category {
  color: #999;
}

.definition {
  margin-top: var(--font-body);
}

.title {
  margin-right: auto;
  font-weight: bold;
  font-size: var(--font-title);
}

.category-list {
  margin-top: var(--font-body);
  display: flex;
  flex-wrap: wrap;
}

.category-item {
  margin-right: var(--font-body);
  margin-bottom: var(--font-body);
}

.category-name {
  font-weight: bold;
  margin-bottom: 8px;
}

.subcategory-list {
  display: flex;
  flex-wrap: wrap;
}

.subcategory-badge {
  margin-right: calc(var(--font-body) * 0.5);
  margin-bottom: calc(var(--font-body) * 0.5);
  background-color: #e0e0e0;
  color: #424242;
  font-size: var(--font-body);
  padding: calc(var(--font-body) * 0.25) calc(var(--font-body) * 0.5);
  border-radius: var(--font-body);
  display: inline-flex;
  align-items: center;
}

.divider {
  width: 100%;
  height: 1px;
  margin-top: var(--font-body);
  margin-bottom: var(--font-body);
  background-color: #e0e0e0;
}
